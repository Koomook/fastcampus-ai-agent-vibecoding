{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "mcp__youtube-transcript__get_transcript",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/youtube_transcript.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '\"\\(.tool_input.command) - \\(.tool_input.description // \"No description\")\"' >> ~/.claude/bash-command-log.txt"
          }
        ]
      }
    ]
  }
}
